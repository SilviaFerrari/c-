//exercice 1
#include <bits/stdc++.h> 
#include <vector> 
#include <iostream>
#include <cstdlib>

using namespace std;

vector<int>numbers;

void random(int cont){
	/*int i = 0;
	while(i++ < cont) */
	{
		srand((unsigned)time(0));
    //int min = 999, max = -1;
    for( size_t i = 0; i < cont; ++i )
    {
        int val = (rand()%101)-50;
		numbers.push_back(val);
	  }
  }
}

void print_vector(){
	//cout << "Numeri:" << endl << endl; 
    for (int i = 0; i < numbers.size(); i++)
	{
		cout << numbers[i] << " " << "|" << " ";
	}  
}

int main(){
	
	srand(time(NULL));	
	int r = rand() % 30 + 1;
	cout << r << endl;

	random(r);
	print_vector();
	
	sort(numbers.begin(), numbers.end()); 
	print_vector();    
}
